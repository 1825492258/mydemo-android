<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.ThreeFragment">

    <Button
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/md_red_500"
        android:text="妹子图" />

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/md_cyan_500" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/md_blue_500" />
    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_views"
        android:layout_width="match_parent"
        android:layout_height="100dp"

         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/md_blue_500" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="倒计时"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_hour"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:textColor="@color/md_blue_500"
            android:textSize="12sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/time_minute"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:textColor="@color/md_blue_500"
            android:textSize="12sp" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text=":" />

        <TextView
            android:id="@+id/time_seconds"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:textColor="@color/md_blue_500"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnToOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnToShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop" />

        <Button
            android:id="@+id/btnKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软键盘" />

        <Button
            android:id="@+id/btnToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toast" />
    </LinearLayout>
</LinearLayout>