<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App Theme Light -->
    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="colorPrimaryDark">?attr/themeColor</item>
        <item name="colorAccent">?attr/themeColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/selectable_item_background_general_light_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_light_pressed</item>

    </style>

    <!-- App Theme Dark -->
    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="colorPrimaryDark">?attr/themeColor</item>
        <item name="colorAccent">?attr/themeColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/selectable_item_background_general_dark_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_dark_pressed</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight">
        <item name="themeColor">@color/md_light_blue_500</item>
    </style>
    <style name="AppThemeDark" parent="BaseAppThemeDark">
        <item name="themeColor">@color/theme_night_blue</item>
    </style>

    <!-- red -->
    <style name="AppThemeLight.Red">
        <item name="themeColor">@color/md_red_500</item>
    </style>

    <style name="AppThemeDark.Red">
        <item name="themeColor">@color/md_red_700</item>
    </style>

    <!-- light_blue -->
    <style name="AppThemeLight.LightBlue">
        <item name="themeColor">@color/md_light_blue_500</item>
    </style>

    <style name="AppThemeDark.LightBlue">
        <item name="themeColor">@color/md_light_blue_700</item>
    </style>

    <!-- grey -->
    <style name="AppThemeLight.Grey">
        <item name="themeColor">@color/md_grey_500</item>
    </style>

    <style name="AppThemeDark.Grey">
        <item name="themeColor">@color/md_grey_700</item>
    </style>
</resources>