<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_portrait_one"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/dialog_selector_top"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#067aff"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e9c1c3" />

        <TextView
            android:id="@+id/dialog_portrait_two"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#067aff"
            android:background="@drawable/dialog_selector_bottom"
            android:gravity="center"
            android:text="相册"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_portrait_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:textColor="#067aff"
            android:background="@drawable/dialog_select"
            android:gravity="center"
            android:text="取消"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>